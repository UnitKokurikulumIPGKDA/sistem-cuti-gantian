name: Deploy to Firebase Hosting
on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      # Step 1: Install & Build React App
      - name: Build React App
        run: |
          npm install
          npm run build

      # Step 2: Salin firebase.json ke dalam folder build/
      - name: Copy firebase.json to build/
        run: |
          cp firebase.json build/

      # Step 3: Deploy ke Firebase Hosting â€” GUNA v0 (STABIL)
      - uses: FirebaseExtended/action-hosting-deploy@v0
        with:
          firebaseServiceAccount: ${{ secrets.FIREBASE_SERVICE_ACCOUNT }}
          projectId: sistem-cuti-gantian
          target: production
          entryPoint: build
